						<textarea placeholder="What'on your mind?" style="width: 509px; height: 250px;"></textarea>
					</div>
					<div class="form-group" align="center">
						<button type="submit" class="btn btn-primary">Send</button>
					</div>
				</form>
			</div>
		</div>
	</section>

	<footer>
  		<%= render "layouts/footer" %>
	</footer>	

